{
    "t":{"label":"Write xam - AXIS_DISABLED",
        "send":["{xam:0}"]},
        "r":{"status":0, "xam":0}
}
#
{
    "t":{"label":"Try to move X axis while disabled",
        "send":["g0 x10"],
        "after":["g0 x0"]},
