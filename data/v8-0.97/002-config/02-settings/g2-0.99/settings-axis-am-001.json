    "t":{"label":"Write xam - AXIS_INHIBITED",
         "send":["{xam:2}"]},
        "r":{"status":0, "xam":2}
}
#
{
    "t":{"label":"Write xam - AXIS_RADIUS - EXCEPTION",
        "send":["{xam:3}"]},
        "r":{"status":109, "xam":null}
}
#
{
    "t":{"label":"Write aam - AXIS_RADIUS - OK",
        "send":["{aam:3}"]},
        "r":{"status":0, "aam":3}
}
#
{
    "t":{"label":"Write aam - AXIS_RADIUS - EXCEPTION",
        "send":["{aam:4}"]},
        "r":{"status":109, "aam":null}
