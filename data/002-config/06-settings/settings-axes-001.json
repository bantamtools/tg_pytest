    "t":{"label":"Read prb group",
         "send":["{prb:n}"]},
        "r":{"status":0}
}
# EOF
{
    "t":{"label":"Read an integer - relaxed JSON mode",
         "send":["{1mi:null}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read a float - relaxed JSON mode",
         "send":["{fb:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read a float - strict JSON mode - CAPITALS",
         "send":["{\"FB\":N}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read a float - relaxed JSON mode - CAPITALS",
         "send":["{FB:N}"]},
