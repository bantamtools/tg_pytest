################################################################################
#
#   settings-axes-001.json - Test all axis settings (this is a long one)
#
#  Run these tests with no setup file, as setup is handled here
#
{
  "defaults":{
    "fail":"hard",
    "delay":0.100
  }
}
#
{
  "before_all":{
    "label":"Reset default settings - Always run this one by itself",
    "before":["{defa:t}"]
  }
}
#
{
  "after_all":{
    "label":"Reset default settings - Always run this one by itself",
    "after":["{defa:t}"]
  }
}
#
{
    "t":{"label":"Set configs for settings tests",
         "send":["{js:1}", "{jv:5}", "{tv:1}", "{qv:0}", "{sv:2}", "{si:100}"]},
    "r":{"status":0}
}
#
# TESTS BEGIN HERE
#
{
    "t":{"label":"Read 1ma",
         "send":["{1ma:null}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Write fb - fails 104",
         "send":["{\"fb\":999.01}"]},
        "r":{"status":104}
}
#
{
    "t":{"label":"Read fv",
         "send":["{fv:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Write fv - fails 104",
         "send":["{fv:99999999999.01}"]},
        "r":{"status":104}
}
#
{
    "t":{"label":"Read hp",
         "send":["{hp:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Write hp",
         "send":["{hp:2}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read hv",
         "send":["{hv:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Write hv",
         "send":["{hv:8}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read board id",
         "send":["{id:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Write board id",
         "send":["{id:\"Rogerwilco\"}"]},
        "r":{"status":104}
}
#
{
    "t":{"label":"Read sys group",
         "send":["{sys:n}"]},
        "r":{"status":0}
}
