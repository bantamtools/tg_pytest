#   settings-motor-ma-001.json - Test motor Map Axis settings
#
#  Run these tests with no setup file
#
{
  "defaults":{
    "fail":"hard",
    "delay":0.100
  }
}
#
{
  "before_all":{
    "label":"Reset default settings",
    "before":["{defa:t}"]
  }
}
#
{
  "after_all":{
    "label":"Reset default settings",
    "after":["{defa:t}"]
  }
}
# SETUP
{
    "t":{"label":"Set configs for settings tests",
         "send":["{js:1}", "{jv:5}", "{tv:1}", "{qv:0}", "{sv:2}", "{si:200}"]},
    "r":{"status":0}
}
#
# MA - Map Axis tests
#
{
    "t":{"label":"Read 1ma - flat",
         "send":["{1ma:null}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read 1ma - nested",
         "send":["{1:{ma:null}}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Read 2ma",
         "send":["{2ma:null}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Write 2ma",
         "send":["{2ma:4}"]},
        "r":{"status":0, "2ma":4}
}
#
{
    "t":{"label":"Read 7ma - unrecognized command",
         "send":["{7ma:null}"]},
        "r":{"status":100}
}
