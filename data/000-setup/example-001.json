################################################################################
#
#   example-001.json  - Examples of tester features
#
#  This file is not actually meant to be run, but attempts are made to keep it "safe"
#
# DEFAULTS OBJECT
{
  "defaults":{
    "fail":"hard",
    "delay":0.05
  }
}
#
# include 000-setup/example-incl-001.json

# EOF
# BEFORE AND AFTERS
{
  "before_all":{
    "label":"Reset default settings - Always run this one by itself",
    "after":["{defa:t}"]
  }
}
#
{
  "before_each":{
    "label":"clear alarms and return to home",
    "before":["{clear:n}","G28"],
    "delay":0.100
  }
}
#
{
  "after_each":{
    "label":"clear alarms and return to home",
    "after":["{clear:n}","G28"],
    "delay":0.100
  }
}
#
{
  "after_all":{
    "label":"M30 program end - also clears alarms",
    "after":["M30"]
  }
}
# SETUP
{
    "t":{"label":"Set configs",
         "send":["{js:1}", "{jv:5}", "{tv:1}", "{qv:0}","{sv:2}", "{si:100}"],
         "delay":0.100,
         "setup":true},
    "r":{"status":0}
}
#
{
    "t":{"label":"Clear status reports - Always run this one by itself",
         "send":["{srs:{clear:t}}"],
         "delay":0.100,
         "setup":true},
    "r":{"status":0}
}
#
{
    "t":{"label":"Set status reports",
         "send":["{srs:{set:{line:t,posx:t,posy:t,posz:t,feed:t,vel:t,unit:t,coor:t,dist:t,stat:t}}}"],
         "delay":0.100,
         "setup":true},
    "r":{"status":0}
}
#
{
    "t":{"label":"Set gcode defaults",
         "send":["G21 G94 G90 G91.1",
                 "G10 L2 P1 X0 Y0 Z0",
                 "G10 L2 P2 X0 Y0 Z0",
                 "G10 L2 P3 X0 Y0 Z0",
                 "G10 L2 P4 X0 Y0 Z0",
                 "G10 L2 P5 X0 Y0 Z0",
                 "G10 L2 P6 X0 Y0 Z0",
                 "G54"
               ],
        "delay":0.100,
        "setup":true}
}
#
{
    "t":{"label":"Force home position",
         "send":["g28.3 x0 y0 z0"],
         "setup":true},
    "r":{"status":0}
}
# RUN "test"
{
    "t":{"label":"Tail wag",
         "send":["g0 x2 y2", "g0 x0 y0"]
        }
}
