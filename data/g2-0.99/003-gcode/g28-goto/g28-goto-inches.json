################################################################################
#
#  g28-goto-inches-001.json - test g28/g30 in inches and mixed modes
#
# include 000-init/init-standard-gcode.json
#
# This file sets up the board to behave as an Othermachine Othermill:
#   X min/max travel                0, 145.6 (mm)
#   Y min/max travel                0, 119.1 (mm)
#   Z min/max travel                -60.1, 0 (mm)
#
#   XYZ maximum velocity            1500 mm/min
#   XYZ maximum jerk                 500 mm/min^3 (* 1,000,000)
#   JT junction integration time    0.75
#
#   Other parameters such as limit enables, motor power, etc. are not changed
#   Motor mapping is assumed to be correct and not messed with.
#
#   Position the head at machine origin or some other unobstructed start position
*   Ensure that clearance from start position is at least (60,60,-30)
#   The origin position will be set to (0,0,0) by the G28.3 command
#
# Set some offsets to test against
{
    "t":{"label":"Set G55 & G56 offsets for testing G28/G30 inches mode",
        "before":["G20"],
        "send":["G10 L20 P2 X-2 Y-2 Z1",
                "G10 L20 P3 X-1 Y-1 Z0.5"]},
    "r":{"status":0}
}
#
# START TESTS
#
# G28 / G54 TEST
#
{
    "t":{"label":"Move to test position in G54 coordinates",
        "before":["G20","G54"],
        "send":["g0 x2 y2 z-1"]},
    "r":{"status":0},
    "sr":{"posx": 2, "posy": 2, "posz": -1}
}
#
{
    "t":{"label":"Save G28 test position",
        "send":["G28.1"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Move to third position",
        "send":["g0 x2.50 y2.50 z-1.25"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Return to G28 test position",
        "send":["G28"]},
    "r":{"status":0},
    "sr":{"posx": 2, "posy": 2, "posz": -1}
}
#
{
    "t":{"label":"Move to third position again",
        "send":["g0 x2.50 y.250 z-1.25"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Return to G28 test position XY first, then Z",
        "send":["G28 X2 Y2"]},
    "r":{"status":0},
    "sr":{"posx": 2, "posy": 2, "posz": -1}
}
#
# G28 / G55 TEST
#
{
    "t":{"label":"Move to test position in G54 coordinates",
        "before":["G20","G54"],
        "send":["g0 x2 y2 z-1"]},
    "r":{"status":0},
    "sr":{"posx": 2, "posy": 2, "posz": -1}
}
#
{
    "t":{"label":"Save G28 test position",
        "send":["G28.1"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Select G55 - at the saved test position",
        "send":["G55"]},
    "r":{"status":0},
    "sr":{"posx": 0, "posy": 0, "posz": 0}

}
#
{
    "t":{"label":"Move to third position",
        "send":["g0 x0.5 y0.5 z-0.25"]},
    "r":{"status":0},
    "sr":{"posx": 0.5, "posy": 0.5, "posz": -0.25}
}
#
{
    "t":{"label":"Return to G28 test position - in G55 offsets",
        "send":["G28"]},
    "r":{"status":0},
    "sr":{"posx": 0, "posy": 0, "posz": 0}
}
#
# G30 / G56 TEST
#
{
    "t":{"label":"Move to test position in G54 coordinates",
        "before":["G20","G54"],
        "send":["g0 x2 y2 z-1"]},
    "r":{"status":0},
    "sr":{"posx": 2, "posy": 2, "posz": -1}
}
#
{
    "t":{"label":"Save G30 test position in G55 coordinates",
        "send":["G55","G30.1"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Select G56 - at the saved test position",
        "send":["G56"]},
    "r":{"status":0},
    "sr":{"posx": 1, "posy": 1, "posz": -0.5}

}
#
{
    "t":{"label":"Move to third position",
        "send":["g0 x0.5 y0.5 z-0.25"]},
    "r":{"status":0},
    "sr":{"posx": 0.5, "posy": 0.5, "posz": -0.25}
}
#
{
    "t":{"label":"Return to G30 test position - in G56 offsets",
        "send":["G30"]},
    "r":{"status":0},
    "sr":{"posx": 1, "posy": 1, "posz": -0.5}
}
#
# G30 / G54 TEST MIXED MM AND INCHES MODE
#
{
    "t":{"label":"Move to test position in G54 coordinates",
        "before":["G21","G54"],
        "send":["g0 x40 y40 z-20"]},
    "r":{"status":0},
    "sr":{"posx": 40, "posy": 40, "posz": -20}
}
#
{
    "t":{"label":"Save G30 test position",
        "send":["G30.1"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Move to third position",
        "send":["g0 x50 y50 z-25"]},
    "r":{"status":0}
}
#
{
    "t":{"label":"Return to G30 test position in inches mode",
        "before":["G20"],
        "send":["G30"]},
    "r":{"status":0},
    "sr":{"posx": 1.575, "posy": 1.575, "posz": -0.787}
}
#
{
    "t":{"label":"Move to a fourth position in inches mode",
        "before":["G20"],
        "send":["g0 x1 y1 z-0.5"]},
    "r":{"status":0},
    "sr":{"posx": 1, "posy": 1, "posz": -0.5}
}
#
{
    "t":{"label":"Return to G30 test position in mm mode",
        "before":["G21"],
        "send":["G30"]},
    "r":{"status":0},
    "sr":{"posx": 40, "posy": 40, "posz": -20}
}
