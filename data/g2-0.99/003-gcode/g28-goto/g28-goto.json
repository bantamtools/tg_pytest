#
{
    "t":{"label":"Move to new position in G55 INCHES mode",
         "send":["g20 g0 x2 y1.5 z-0.5"]},
    "r":{"status":0},
    "sr":{"posx": 2, "posy": 1.5, "posz": -0.5}
}
