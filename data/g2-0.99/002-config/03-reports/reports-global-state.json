#
# include 000-init/init-json.json
#
# System State - stat
{
    "t":{"label":"Read stat",
        "before":["M30"],
        "send":["{stat:null}"]},
    "r":{"status":0, "stat":4}
}
#
{
    "t":{"label":"EXCEPTION: Write stat, is read-only",
        "send":["{stat:999.01}"]},
    "r":{"status":104, "stat":null}
}
