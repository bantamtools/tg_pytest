{
    "t":{"label":"Set status report - RUNS AFTER CLEAR STATUS REPORT",
        "send":["{sr:{line:t,posx:t,posy:t,posz:t,mpox:t,mpoy:t,mpoz:t,feed:t,vel:t,unit:t,com:t,cof:t,spc:t,sps:t,dw:t,stat:t}}"]},
    "r":{"status":0}
}
#
# TESTS START HERE
# Test G55 offsets in inches
{
    "t":{"label":"FO01A: Single move test to 4 inches - start movement and do a feedhold",
        "before":["{clear:n}", "~",
                "G20",
                "G10 L20 P2 X-1 Y-1 Z-2",
                "G55",
                "g0 x0 y0"],
        "send":["G1 F500 X4",
                "!"],
        "delay":0.25},
    "r":{"status":0},
    "sr":{"stat":6}
}
#
{
    "t":{"label":"FO01B: Exit feedhold and resume",
        "send":["~"]},
    "r":{"status":0},
    "sr":{"stat":3,"posx":4}
}
