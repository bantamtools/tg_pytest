################################################################################
#
#   power-management-fb100-001.json - Power Management functions
#
# Test assumptions:
#   UUT has 4 motors
#   motor mapping: 1=X, 2=Z, 3=Y, 4=A  (1=X, 2=Y, 3=Z, 4=A)
#   motors can operate at 0.40 power level settings
#   motors can idle at 0.15 power level settings (future)
#
# XXX_include 000-setup/setup-settings-001.json
#
{
  "before_all":{
    "label":"Setup for power management tests",
    "before":["{ej:1}", "{jv:5}", "{qv:0}", "{sv:2}", "{si:200}",
            "{sr:{pwr1:t, pwr2:t, pwr3:t, pwr4:t}}",
            "{1pm:2}, {2pm:2}, {3pm:2}, {4pm:2}",
            "{1pl:0.4}, {2pl:0.4}, {3pl:0.4}, {4pl:0.4}",
            "{mt:0.5}",
            "{md:0}",
            "G21" ]
  }
}
#
{
  "before_each":{
    "label":"Reset coordinates",
    "after":["G28.3 X0"],
    "delay":0.100
  }
}
#
{
  "after_each":{
    "label":"Reset timeouts and disable motors",
    "after":["{mt:0.5}", "{md:0}"],
    "delay":0.100
  }
}
#
{
  "after_all":{
    "label":"Restore default settings",
    "after":["{defa:t}"]
  }
}
#
# TESTS BEGIN HERE
#
#
{
    "t":{"label":"Confirm that all motors are disabled",
        "send":["{sr:n}"]},
    "r":{"status":0, "sr":{"pwr1":0,"pwr2":0,"pwr3":0,"pwr4":0}
    }
}
#
{
    "t":{"label":"Enable all motors",
        "before":["{mt:5}"],
        "send":["{me:0}"]},
    "r":{"status":0},
    "sr":{"pwr1":0.4,"pwr2":0.4,"pwr3":0.4,"pwr4":0.4}
}
#
{
    "t":{"label":"Disable all motors and make sure they stay that way",
        "before":["{1pm:0}", "{2pm:0}", "{3pm:0}", "{4pm:0}"],
        "send":["{me:0}"]},
    "r":{"status":0},
    "sr":{"pwr1":0,"pwr2":0,"pwr3":0,"pwr4":0}
}
# Test ALWAYS ON mode
{
    "t":{"label":"Test ALWAYS ON mode",
        "before":["{1pm:1}", "{2pm:1}", "{3pm:1}", "{4pm:1}", "{mt:0.1}"],
        "send":["{md:0}"]},
    "r":{"status":0},
    "sr":{"pwr1":0.4,"pwr2":0.4,"pwr3":0.4,"pwr4":0.4}
}
# Test POWERED IN CYCLE mode
{
    "t":{"label":"Test POWERED IN CYCLE mode",
        "before":["{1pm:2}", "{2pm:2}", "{3pm:2}", "{4pm:2}"],
        "send":["G0 X10", "{sr:n}"]},
    "r":{"status":0}, "sr":{"pwr1":0.4,"pwr2":0.4,"pwr3":0.4,"pwr4":0.4}
}
# Test POWERED WHEN MOVING mode
{
    "t":{"label":"Test POWERED WHEN MOVING mode",
        "before":["{1pm:3}", "{2pm:3}", "{3pm:3}", "{4pm:3}"],
        "send":["G0 X10", "{sr:n}"]},
    "r":{"status":0}, "sr":{"pwr1":0.4,"pwr2":0,"pwr3":0,"pwr4":0}
}
