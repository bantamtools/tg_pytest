################################################################################
#
#   json-baseline-001.json - JSON success tests
#
#  It's best to run these tests with no setup file, as setup is handled here
#
{
  "defaults":{
    "fail":"hard"
  }
}
#
{
    "t":{"label":"Set configs for JSON tests",
         "send":["{js:1}", "{jv:5}", "{tv:1}", "{qv:0}", "{sv:2}", "{si:100}"],
         "delay":0.100},
    "r":{"status":0}
}
#
# JSON TESTS BEGIN HERE
#
{
    "t":{"label":"Simple read with null - strict mode",
         "send":["{\"fb\":null}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple read with null - relaxed mode",
         "send":["{fb:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple read with null - strict mode - CAPITALS",
         "send":["{\"FB\":N}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple read with null - relaxed mode - CAPITALS",
         "send":["{FB:N}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple read with double quotes (null string)",
         "send":["{fb:\"\"}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Group read request",
         "send":["{x:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple write with floating point number",
         "send":["{g59c:100.1}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple write with integer number",
         "send":["{tid:12345678}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple write with boolean true",
         "send":["{1po:true}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple write with boolean false",
         "send":["{1po:false}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Simple write with string value",
         "send":["{msg:\"string\"}"]},
        "r":{"status":0}
}
# SKIP
{
    "t":{"label":"Simple write with string value with escaped quotes",
         "send":["{msg:\"string\\\"embedded\\\"\"}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Sibling read request - 2 elements",
        "send":["{xvm:n,xfr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Sibling write request - 4 elements",
        "send":["{xvm:10000,xfr:8000,xtn:0,xtm:400}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Nested parent read request - 2 children",
        "send":["{x:{vm:n,fr:n}}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Nested JSON write request - 4 children",
        "send":["{x:{vm:1000,fr:1000,tn:0,tm:200}}"],
        "after":["{x:{vm:1500,fr:1500}}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Nested JSON mixed read / write request",
        "send":["{x:{vm:2000,fr:n}}"],
        "after":["{x:{vm:1500,fr:1500}}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Nested case, CAPITALS",
         "send":["{X:{VM:NULL}}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"White space padding cases - relaxed - CAPITALS",
         "send":["  {FB:N}","{ FB:N}","{FB :N}","{FB: N}","{FB:N }","{FB:N}   ", "  { FB : N }  "]},
        "r":{"status":0}
}
#
{
    "t":{"label":"White space padding cases - strict - CAPITALS",
         "send":["  {\"FB\":N}","{\" FB\":N}","{\"FB \":N}","{\"FB\": N}","{\"FB\":N }","{\"FB\":N}   ", "  { FB : N }  "]},
        "r":{"status":0}
}
