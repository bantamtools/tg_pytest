################################################################################
#
#   statusReports-001.json
#

{
    "t":{"label":"Reset status reports using $defa=1",
         "send":["{defa:1}"]},
        "r":{"status":0, "defa":1}
}
#
{
    "t":{"label":"Request default SR - must have posx, posy, posz, posa for these tests",
         "send":["{sr:n}"]},
         "r":{"status":0}
}
#
{
    "t":{"label":"Remove all status reports",
         "send":["{sr:f}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Restore all status reports",
         "send":["{sr:t}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Remove 'posa' from status report",
         "send":["{sr:{posa:f}}","{sr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Add 'posa' to status report using 't'",
         "send":["{sr:{posa:t}}","{sr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Add 'posa' to status report using 'true'",
         "send":["{sr:{posa:true}}","{sr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Remove 'posx', 'posy', 'posz' from status report",
         "send":["{sr:{posx:f,posy:f,posz:f}}","{sr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Add 'posx' and remove 'posy'",
         "send":["{sr:{posx:t,posy:f}}","{sr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Add 'posx', 'posy', 'posz' to status report",
         "send":["{sr:{posx:t,posy:t,posz:t}}","{sr:n}"]},
        "r":{"status":0}
}
#
{
    "t":{"label":"Setup full status report",
      "send":["{sr:{line:t,posx:t,posy:t,posz:t,posa:t,feed:t,vel:t,unit:t,coor:t,dist:t,admo:t,frmo:t,momo:t,stat:t}}"]},
         "r":{"status":0}
}
#
{
    "t":{"label":"Try to add a bad token to status report - single token",
         "send":["{sr:{BOGUS:t}}"]},
        "r":{"status":100}
}
#
{
    "t":{"label":"Try to add a bad token to status report - list of tokens",
         "send":["{sr:{posx:t,BOGUS:t,posz:t}}"]},
        "r":{"status":100}
}
#
{
    "t":{"label":"Try to add token with string format",
         "send":["{sr:{posx:\"ON\"}}"]},
        "r":{"status":103}
}
#
{
    "t":{"label":"Try to add token with int format",
         "send":["{sr:{posx:42}}"]},
        "r":{"status":103}
}
#
{
    "t":{"label":"Try to add token with float format",
         "send":["{sr:{posx:42.42}}"]},
        "r":{"status":103}
}
